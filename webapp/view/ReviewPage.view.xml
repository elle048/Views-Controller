<mvc:View controllerName="com.training.day3exer1baranco.controller.ReviewPage"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Page id="idReviewPage" title="{i18n>reviewTitle}" floatingFooter="true">
        <content>
            <core:Fragment fragmentName="com.training.day3exer1baranco.fragment.ShoppingCart" type="XML" />
        </content>
        <footer>
            <OverflowToolbar id="idOFTFooterReview">
                <ToolbarSpacer id="idTSpacerFooterReview"/>
                <Button id="idBtnPromos" text="{i18n>promoBtn}" tooltip="{i18n>promoTooltip}" press="onPressPromo"/>
                <Button id="idBtnBack" text="{i18n>backBtn}" tooltip="{i18n>backTooltip}" press="onPressBack"/>
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>
